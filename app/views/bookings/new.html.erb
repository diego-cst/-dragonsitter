<div class="container">
  <div class="row">
    <div class="col-xs-6 col-md-4 col-md-offset-4">
      <h1>Book <%= @dragon.name %></h1>
      <%= simple_form_for [@dragon, @booking] do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
