<div class="dragon-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @dragon.photo_url, height: 500, width: 500, crop: :fill %>');">
  <div class="dragon-banner-content">
    <!--     Add cloudinary link to images here: -->
    <h1 class="btn btn-success">View photos</h1>
  </div>
</div>

<div class="dragon-show-wrapper">
  <div class="container">
    <div class="row">

      <div class="dragon-show-info-card col-xs-12 col-md-8">
        <div class="dragon-name-user-profile">
        <h3><%= @dragon.name %></h3>
        <%= cl_image_tag @dragon.owner.photo_url, class: 'avatar' %>
        </div>
        <p> <%= @dragon.location %> </p>
        <ul class="dragon-attributes">
          <li class="dragon-bullet-attributes">
            <i class="fas fa-exclamation-circle"></i>
            <%= @dragon.describe_temperament %></li>
            <li class="dragon-bullet-attributes">
              <i class="fas fa-fire"></i>
              <%= @dragon.fire %>
              <li>Size: <%= @dragon.describe_size %></li>
            </ul>
            <p><%= @dragon.description %></p>
          </div>

          <div class="booking-box col-xs-12 col-md-4">
            <div class="booking-price-box">
              <span class="booking-price"> <%= @dragon.price %> </span>
              <span class="booking-per-night">â‚¬ per day</span>
            </div>
            <%= render 'form-bookings', dragon: @dragon, booking: @booking %>
          </div>
        </div>
      </div>
    </div>


