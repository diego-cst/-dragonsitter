  <div class="form-inputs">
    <%= simple_form_for @dragon do |f| %>
    <%= f.input :name, autofocus: true %>
    <%= f.input :location %>
    <%= f.input :size, collection: 0..4, wrapper_html: { class: 'dragon-new-select' } %>
    <%= f.input :temperament, collection: 0..4, wrapper_html: { class: 'dragon-new-select' } %>
    <%= f.input :fire, as: :boolean, checked_value: true, unchecked_value: false %>
    <%= f.input :color %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <% end %>
